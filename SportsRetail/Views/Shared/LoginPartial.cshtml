
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a a class="nav-link" id="registerLink" asp-controller="Account" asp-action="Register"> Register </a>
    </li>

    <li class="nav-item">
        <a a class="nav-link" id="loginLink" asp-controller="Account" asp-action="Login"> Log in </a>
    </li>
}
